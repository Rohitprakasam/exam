#include <stdio.h>

int stack[100], choice, n, top, x, i;

/* Function declarations */
void push(void);
void pop(void);
void display(void);

int main()
{
    top = -1;

    printf("\nEnter the size of STACK [MAX = 100]: ");
    scanf("%d", &n);

    if (n <= 0 || n > 100)
    {
        printf("Invalid stack size.\n");
        return 1;
    }

    printf("\n\tSTACK OPERATIONS USING ARRAY");
    printf("\n\t1. PUSH\n\t2. POP\n\t3. DISPLAY\n\t4. EXIT");

    do
    {
        printf("\nEnter the Choice: ");
        scanf("%d", &choice);

        switch (choice)
        {
        case 1:
            push();
            break;
        case 2:
            pop();
            break;
        case 3:
            display();
            break;
        case 4:
            printf("\nEXIT POINT\n");
            break;
        default:
            printf("\nPlease Enter a Valid Choice (1/2/3/4)");
        }

    } while (choice != 4);

    return 0;
}

/* Push operation */
void push(void)
{
    if (top >= n - 1)
    {
        printf("\nSTACK overflow");
    }
    else
    {
        printf("Enter a value to be pushed: ");
        scanf("%d", &x);
        top++;
        stack[top] = x;
    }
}

/* Pop operation */
void pop(void)
{
    if (top <= -1)
    {
        printf("\nSTACK underflow");
    }
    else
    {
        printf("\nThe popped element is %d", stack[top]);
        top--;
    }
}

/* Display operation */
void display(void)
{
    if (top >= 0)
    {
        printf("\nThe elements in STACK are:\n");
        for (i = top; i >= 0; i--)
            printf("%d\n", stack[i]);
    }
    else
    {
        printf("\nThe STACK is empty");
    }
}

#include <stdio.h>
#include <stdlib.h> // for malloc and exit
#include <conio.h>  // for clrscr() if using Turbo C

struct Node
{
    int data;
    struct Node *next;
} *front = NULL, *rear = NULL;

/* Function declarations */
void insert(int value);
void dequeue();    // renamed from delete()
void display();

int main()
{
    int choice, value;
    clrscr(); // optional, remove if not using Turbo C

    printf("\n:: Queue Implementation using Linked List ::\n");

    while (1)
    {
        printf("\n****** MENU ******\n");
        printf("1. Insert\n2. Delete\n3. Display\n4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice)
        {
        case 1:
            printf("Enter the value to be inserted: ");
            scanf("%d", &value);
            insert(value);
            break;
        case 2:
            dequeue();
            break;
        case 3:
            display();
            break;
        case 4:
            exit(0);
        default:
            printf("\nWrong selection!!! Please try again!!!\n");
        }
    }

    return 0;
}

/* Insert (enqueue) operation */
void insert(int value)
{
    struct Node *newNode;
    newNode = (struct Node *)malloc(sizeof(struct Node));
    if (newNode == NULL)
    {
        printf("\nMemory allocation failed!\n");
        return;
    }

    newNode->data = value;
    newNode->next = NULL;

    if (front == NULL) // empty queue
        front = rear = newNode;
    else
    {
        rear->next = newNode;
        rear = newNode;
    }

    printf("\nInsertion is Success!!!\n");
}

/* Delete (dequeue) operation */
void dequeue()
{
    if (front == NULL)
    {
        printf("\nQueue is Empty!!!\n");
        return;
    }

    struct Node *temp = front;
    front = front->next;

    printf("\nDeleted element: %d\n", temp->data);
    free(temp);

    if (front == NULL) // if queue becomes empty
        rear = NULL;
}

/* Display queue elements */
void display()
{
    if (front == NULL)
    {
        printf("\nQueue is Empty!!!\n");
        return;
    }

    struct Node *temp = front;
    printf("\nQueue elements (front to rear):\n");
    while (temp != NULL)
    {
        printf("%d", temp->data);
        if (temp->next != NULL)
            printf(" ---> ");
        temp = temp->next;
    }
    printf(" ---> NULL\n");
}

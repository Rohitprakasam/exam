#include <stdio.h>
#include <stdlib.h>
#include <conio.h>

/* Node structure */
struct Node
{
    int data;
    struct Node *next;
} *top = NULL;

/* Function declarations */
void push(int value);
void pop();
void display();

int main()
{
    int choice, value;
    clrscr();

    printf("\n:: Stack using Linked List ::\n");

    while (1)
    {
        printf("\n****** MENU ******\n");
        printf("1. Push\n2. Pop\n3. Display\n4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice)
        {
        case 1:
            printf("Enter the value to be inserted: ");
            scanf("%d", &value);
            push(value);
            break;
        case 2:
            pop();
            break;
        case 3:
            display();
            break;
        case 4:
            exit(0);
        default:
            printf("\nWrong selection!!! Please try again!!!\n");
        }
    }

    return 0;
}

/* Push operation */
void push(int value)
{
    struct Node *newNode;
    newNode = (struct Node *)malloc(sizeof(struct Node));
    if (newNode == NULL)
    {
        printf("\nMemory allocation failed!\n");
        return;
    }

    newNode->data = value;
    newNode->next = top; // Point new node to current top
    top = newNode;       // Update top

    printf("\nInsertion is Success!!!\n");
}

/* Pop operation */
void pop()
{
    if (top == NULL)
    {
        printf("\nStack is Empty!!!\n");
        return;
    }

    struct Node *temp = top;
    printf("\nDeleted element: %d\n", temp->data);
    top = top->next;
    free(temp);
}

/* Display stack */
void display()
{
    if (top == NULL)
    {
        printf("\nStack is Empty!!!\n");
        return;
    }

    struct Node *temp = top;
    printf("\nStack elements (top to bottom):\n");
    while (temp != NULL)
    {
        printf("%d --> ", temp->data);
        temp = temp->next;
    }
    printf("NULL\n");
}

#include<stdio.h>

#define INF 999

int n, cost[10][10], dist[10], visited[10];

void dijkstra(int src)
{
    int i, u, min, count;

    for(i=0;i<n;i++){
        dist[i] = cost[src][i];
        visited[i] = 0;
    }

    visited[src] = 1;
    dist[src] = 0;

    for(count=1;count<n;count++)
    {
        min = INF;
        for(i=0;i<n;i++)
            if(dist[i]<min && !visited[i]){
                min = dist[i];
                u = i;
            }

        visited[u] = 1;

        for(i=0;i<n;i++)
            if(!visited[i] && dist[u]+cost[u][i] < dist[i])
                dist[i] = dist[u] + cost[u][i];
    }
}

int main()
{
    int i, j, src;

    printf("Enter number of vertices: ");
    scanf("%d",&n);

    printf("Enter cost matrix (999 for no edge):\n");
    for(i=0;i<n;i++)
        for(j=0;j<n;j++)
            scanf("%d",&cost[i][j]);

    printf("Enter source vertex: ");
    scanf("%d",&src);

    dijkstra(src);

    printf("Shortest distances:\n");
    for(i=0;i<n;i++)
        printf("%d -> %d = %d\n", src, i, dist[i]);

    return 0;
}
